<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Easy_game">

<RelativeLayout
    android:layout_above="@+id/bottomBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_blue_dark"
    android:padding="6dp">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/score_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: "
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        tools:ignore="InvalidId" />

    <TextView
        android:id="@+id/scoreTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        tools:ignore="InvalidId" />

    <TextView
        android:id="@+id/evaluate_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evaluate:"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        tools:ignore="InvalidId" />

    <TextView
        android:id="@+id/EvaluateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="expression "
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        tools:ignore="InvalidId" />


</RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@color/teal_200"
    android:layout_alignParentBottom="true"
    android:id="@+id/bottomBar">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/topBtn_1"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_red_light"
        android:src="@drawable/top_arrow"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/topBtn"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_light"
        android:src="@drawable/top_arrow"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/leftBtn_1"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_red_light"
            android:src="@drawable/left_arrow"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/leftBtn"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_green_light"
            android:src="@drawable/left_arrow"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/rightBtn"
            android:layout_marginStart="60dp"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_green_light"
            android:src="@drawable/right_arrow"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/rightBtn_1"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_red_light"
            android:src="@drawable/right_arrow"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/bottomBtn"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_light"
        android:src="@drawable/bottom_arrow"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/bottomBtn_1"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_red_light"
        android:src="@drawable/bottom_arrow"/>
</LinearLayout>
</RelativeLayout>
